// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Admin user model for authentication
model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

// Product model for store items
model Product {
  id          String   @id @default(uuid())
  name        String
  description String   @db.Text
  price       Int      // Price in cents (e.g., 999 = $9.99)
  imageUrl    String
  category    String?  // Product category for filtering
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Link to COGS recipe (for profit tracking)
  cogsRecipeId String?     @unique
  cogsRecipe   CogsRecipe? @relation(fields: [cogsRecipeId], references: [id], onDelete: SetNull)

  orderItems OrderItem[]

  @@index([isAvailable])
  @@index([category])
  @@map("products")
}

enum FulfillmentMethod {
  SHIPPING
  PICKUP
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum FulfillmentStatus {
  PENDING
  FULFILLED
}

// Order model for customer purchases
model Order {
  id                    String            @id @default(uuid())
  customerName          String
  customerEmail         String
  customerPhone         String
  shippingAddress       Json?             // { street, city, state, zipCode }
  fulfillmentMethod     FulfillmentMethod
  shippingCost          Int?              // In cents (flat $10.00 = 1000)
  subtotal              Int               // In cents
  total                 Int               // In cents
  paymentStatus         PaymentStatus     @default(PENDING)
  fulfillmentStatus     FulfillmentStatus @default(PENDING)
  stripePaymentIntentId String?           @unique
  // Seeds of Kindness - customer's chosen cause and contribution
  proceedsChoice        String?           // Which cause they selected
  seedCount             Int?              // Number of "seeds" sown (calculated from order)
  extraSupportAmount    Int?              // Additional donation in cents
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt

  items OrderItem[]

  @@index([fulfillmentStatus])
  @@index([createdAt])
  @@map("orders")
}

// OrderItem model for products in an order
model OrderItem {
  id          String @id @default(uuid())
  orderId     String
  productId   String
  productName String // Snapshot at time of order
  quantity    Int
  unitPrice   Int    // Price per unit in cents (snapshot)
  lineTotal   Int    // quantity * unitPrice

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@map("order_items")
}

// ============================================
// COGS Calculator Models (Planning Tools)
// ============================================

// Master ingredient library with unit costs
model Ingredient {
  id           String   @id @default(uuid())
  name         String
  unitCost     Float    // Cost per unit (e.g., $0.60 per lb)
  unit         String   // "lb", "oz", "each", "qt", "cup", etc.
  isFromGarden Boolean  @default(false) // Garden items = $0 cost
  category     String?  // "Garden", "Pantry", "Packaging"
  notes        String?  // Optional notes
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  recipeIngredients CogsRecipeIngredient[]
  crops             Crop[]

  @@index([name])
  @@index([category])
  @@map("ingredients")
}

// Recipe/Product cost breakdown
model CogsRecipe {
  id            String   @id @default(uuid())
  name          String
  description   String?
  containerType String   // "quart jar", "pint jar", "8oz jar", "4oz bag", etc.
  containerCost Float    @default(0) // Cost of jar/container + lid
  labelCost     Float    @default(0.20) // Cost of label
  energyCost    Float    @default(0.30) // Energy/water overhead per unit
  retailPrice   Float    // Suggested retail price
  notes         String?  // Optional notes about the recipe
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  ingredients CogsRecipeIngredient[]
  product     Product? // Linked store product (if published)

  @@map("cogs_recipes")
}

// Junction table for recipe ingredients
model CogsRecipeIngredient {
  id           String @id @default(uuid())
  recipeId     String
  ingredientId String
  quantity     Float  // Amount of ingredient used
  
  recipe     CogsRecipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@unique([recipeId, ingredientId])
  @@map("cogs_recipe_ingredients")
}

// ============================================
// Seasonal Planner Models
// ============================================

enum CropType {
  ANNUAL
  PERENNIAL
  BIENNIAL
}

// Garden crops with growing cycle data (Portland, OR Zone 8b)
model Crop {
  id              String   @id @default(uuid())
  name            String
  type            CropType @default(ANNUAL)
  
  // Planting Phase (for annuals/biennials)
  seedStartWeek   Int?     // Week to start indoors (null = direct sow or perennial)
  seedStartNotes  String?  // e.g., "8 weeks before last frost"
  plantOutWeekStart Int?   // First week to plant/transplant outdoors
  plantOutWeekEnd   Int?   // Last week to plant outdoors
  directSow       Boolean  @default(false) // true = don't start indoors
  
  // Harvest Phase
  harvestStart    Int      // Week of year (1-52)
  harvestEnd      Int      // Week of year (1-52)
  peakStart       Int?     // Optional peak period start
  peakEnd         Int?     // Optional peak period end
  
  // Display
  color           String   @default("#4A7C59")
  notes           String?
  
  // Link to COGS ingredient
  ingredientId    String?
  ingredient      Ingredient? @relation(fields: [ingredientId], references: [id], onDelete: SetNull)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([harvestStart])
  @@map("crops")
}

// Seasonal production tasks/checklist
model SeasonalTask {
  id          String    @id @default(uuid())
  title       String
  month       Int       // 1-12
  weekOfMonth Int?      // Optional: 1-4 for specific week
  isCompleted Boolean   @default(false)
  completedAt DateTime?
  year        Int       // Year this task/completion applies to
  notes       String?
  sortOrder   Int       @default(0) // For ordering within a month
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([year, month])
  @@index([isCompleted])
  @@map("seasonal_tasks")
}
